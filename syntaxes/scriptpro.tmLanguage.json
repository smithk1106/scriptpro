{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ScriptPro Script",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#labels"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"name": "comment.line.scriptpro",
			"match": "^\\s*#.*"
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.scriptpro",
					"match": "(?i)\\b(if|then|else|endif|goto|setreturn|setparams|exit|delay|call|include)\\b"
				},
				{
					"name": "keyword.mouse.scriptpro",
					"match": "(?i)\\b(mouse[ \\t]+(?:left|right|middle)[ \\t]+(?:down|up|click|doubleclick)[ \\t]*(?:at|offset){0,1}|origin[ \\t]*(?:from){0,1})\\b"
				},
				{
					"name": "keyword.key.scriptpro",
					"match": "(?i)\\b(key[ \\t]+(?:down|up|press)|sendkeys|settext|gettext)\\b"
				},
				{
					"name": "keyword.image.scriptpro",
					"match": "(?i)\\b((?:checkpixel|findmodel).+(?:inrect|at)|preload|capture[ \\t]+(?:screen|window|client|rect)|to[ \\t]*file)\\b"
				},
				{
					"name": "keyword.other.scriptpro",
					"match": "(?i)\\b(invoke|msgbox|run|runandwait)\\b"
				}
			]
		}, 
		"strings": {
			"name": "string.quoted.double.scriptpro",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.scriptpro",
					"match": "\\\\[\"rn]"
				}
			]
		},
		"labels": {
			"name": "label.scriptpro",
			"match": ":[_a-zA-Z]+[_a-zA-Z0-9]*"
		},
		"variables": {
			"name": "variable.scriptpro",
			"match": "@[_a-zA-Z]+[_a-zA-Z0-9]*"
		}
	},
	"scopeName": "source.sps"
}