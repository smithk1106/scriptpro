{
    "name": "scriptpro",
    "displayName": "ScriptPro",
    "description": "Edit ScriptPro scripts",
    "icon": "asset/ScriptPro.png",
    "version": "1.0.0",
    "author": "WebStory",
    "publisher": "WDLLStudio",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "ScriptPro",
        "scriptpro"
    ],
    "contributes": {
        "languages": [
            {
                "id": "scriptpro",
                "aliases": [
                    "ScriptPro Script",
                    "scriptpro"
                ],
                "extensions": [
                    ".sps"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "scriptpro",
                "scopeName": "source.sps",
                "path": "./syntaxes/scriptpro.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "scriptpro",
                "path": "./snippets.json"
            }
        ],
        "commands": [
            {
                "command": "scriptpro.format",
                "category": "ScriptPro",
                "title": "Format"
            },
            {
                "command": "scriptpro.run",
                "category": "ScriptPro",
                "title": "Run this script"
            }
        ],
        "menus": {
            "editor/context": [
              {
                "when": "resourceLangId == scriptpro",
                "command": "scriptpro.format",
                "group": "ScriptPro@1"
              },
              {
                "when": "resourceLangId == scriptpro",
                "command": "scriptpro.run",
                "group": "ScriptPro@2"
              }
            ]
        }
    },
    "activationEvents": [
        "onCommand:scriptpro.format",
        "onCommand:scriptpro.run"
	],
    "repository": {
        "type": "git",
        "url": "https://github.com/smithk1106/scriptpro.git"
    },

    "configuration": {
        "title": "ScriptPro",
        "properties": {
            "scriptpro.playerPath": {
                "type": "string",
                "default": "bin/ScriptPlayer.exe",
                "description": "The location of the script player for ScriptPro.",
                "scope": "application"
            },
            "scriptpro.silent": {
                "type": "boolean",
                "default": "true",
                "description": "Start script player in background and auto start it.",
                "scope": "application"
            }
        }
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.52.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "eslint": "^7.15.0",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "typescript": "^4.1.2",
        "vscode-test": "^1.4.1"
    }
}
