{
    "name": "scriptpro",
    "displayName": "ScriptPro",
    "description": "Edit ScriptPro scripts",
    "icon": "asset/ScriptPro.png",
    "version": "1.0.0",
    "author": "WebStory",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "contributes": {
        "languages": [{
            "id": "scriptpro",
            "aliases": ["ScriptPro Script", "scriptpro"],
            "extensions": [".sps"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "scriptpro",
            "scopeName": "source.sps",
            "path": "./syntaxes/scriptpro.tmLanguage.json"
        }],
        "snippets": [{
            "language": "scriptpro",
            "path": "./snippets.json"
        }]
    },
    "repository": {
		"type": "git",
		"url": "https://github.com/smithk1106/scriptpro.git"
	}
}